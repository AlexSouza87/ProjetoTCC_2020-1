<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fluxogramas.Crianças.FluxoBebeChorando">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fluxograma 06: Bebê Chorando"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Widget.TextView.PopupMenu"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/listViewFluxo06"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="42dp" />

    <ListView
        android:id="@+id/listViewFluxo06"
        android:layout_width="match_parent"
        android:layout_height="426dp"
        app:layout_constraintBottom_toTopOf="@+id/button78"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/button78"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:onClick="mostrarItensFluxo06"
        android:text="Ver Classificação"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewFluxo06" />

</android.support.constraint.ConstraintLayout>