<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewMalEstarEmCriancas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fluxograma 34: Mal estar em crianças"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Widget.TextView.PopupMenu"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/listViewFluxo34"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <ListView
        android:id="@+id/listViewFluxo34"
        android:layout_width="match_parent"
        android:layout_height="426dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonMalEstarEmCriancas"
        app:layout_constraintTop_toBottomOf="@+id/textViewMalEstarEmCriancas" />

    <Button
        android:id="@+id/buttonMalEstarEmCriancas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:onClick="mostrarItensFluxo34"
        android:text="Ver Classificação"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewFluxo34" />

</android.support.constraint.ConstraintLayout>